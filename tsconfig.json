{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "lib": [
      "es5", 
      "es6", 
      "es7", 
      "dom",
    ],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "outDir": "./lib",
  },
  "include": ["src/**/*"],
}
